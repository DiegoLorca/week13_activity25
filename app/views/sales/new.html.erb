<h1>Ingreso de ventas</h1>
<%= form_with model: @sale, local: true do |f| %>
  <%= f.label :cod, "Código del producto" %>
  <%= f.number_field :cod %>
  <%= f.label :detail, "Ingrese detalle" %>
  <%= f.text_area :detail %>
  <%= f.label :category, "Indique a que categoría pertenese" %>
  <%= f.select :category, %w(uno dos tres cuatro cinco), {:prompt => 'Seleccione una opción'}  %>
  <%= f.label :value, "Indique valor" %>
  <%= f.number_field :value %>
  <%= f.label :discount, "Descuento en porcentaje" %>
  <%= f.number_field :discount %>
  <%= f.label :tax, "Esta exento de IVA?" %>
  <%= f.check_box :tax %>
  <%= f.submit "Enviar" %>
<% end %>
